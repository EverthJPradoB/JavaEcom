<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>RemoverCarrito</servlet-name>
        <servlet-class>Servlet.RemoverCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevaOrdenServlet</servlet-name>
        <servlet-class>Servlet.NuevaOrdenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarOrdenServlet</servlet-name>
        <servlet-class>Servlet.EliminarOrdenServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControladorProductos</servlet-name>
        <servlet-class>ServletAdmin.ServletControladorProductos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletControlCliente</servlet-name>
        <servlet-class>ServletAdmin.ServletControlCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <servlet-class>Servlet.RegistrarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoverCarrito</servlet-name>
        <url-pattern>/RemoverCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevaOrdenServlet</servlet-name>
        <url-pattern>/NuevaOrdenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarOrdenServlet</servlet-name>
        <url-pattern>/EliminarOrdenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControladorProductos</servlet-name>
        <url-pattern>/ServletControladorProductos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletControlCliente</servlet-name>
        <url-pattern>/ServletControlCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuarioServlet</servlet-name>
        <url-pattern>/RegistrarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
